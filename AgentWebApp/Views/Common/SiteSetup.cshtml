@model List<SiteSetupModel>

@{
    ViewData["Title"] = "Site Setup";
}

<div class="container-xxl flex-grow-1 container-p-y">
    <h4 class="fw-bold py-3 mb-4">
        <span class="text-muted fw-light">Home /</span>
        <a asp-action="Create"> Site Setup</a>
    </h4>
    <p>
        <a asp-action="CreateSiteSetup" class="btn btn-primary">Create New</a>
    </p>

    <div class="card">
        <h5 class="card-header">List of Sites</h5>
        <div class="table-responsive text-nowrap">
            <table class="table" id="dataTable">
                <thead>
                    <tr>
                        <th>Sl No.</th>
                        <th>Site Name</th>
                        <th>Code</th>
                        <th>URL</th>
                        <th>Email</th>
                        <th>Phone</th>
                        <th>Address</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody class="table-border-bottom-0">
                    @if (Model != null && Model.Count > 0)
                    {
                        var index = 1;
                        foreach (var item in Model)
                        {
                            <tr>
                                <td><strong>@index</strong></td>
                                <td>@item.SiteName</td>
                                <td>@item.SiteCode</td>
                                <td>@item.SiteUrl</td>
                                <td>@item.SiteEmail</td>
                                <td>@item.SitePhone</td>
                                <td>@item.SiteAddress</td>
                                <td>
                                    <div class="dropdown">
                                        <button type="button" class="btn p-0 dropdown-toggle hide-arrow" data-bs-toggle="dropdown">
                                            <i class="bx bx-dots-vertical-rounded"></i>
                                        </button>
                                        <div class="dropdown-menu">
                                            <a class="dropdown-item" href="@Url.Action("Edit", "SiteSetup", new { id = item.ID })">
                                                <i class="bx bx-edit-alt me-2"></i> Edit
                                            </a>
                                            <a class="dropdown-item" href="@Url.Action("Details", "SiteSetup", new { id = item.ID })">
                                                <i class="bx bx-info-circle me-2"></i> Details
                                            </a>
                                            <a class="dropdown-item" href="javascript:void(0);" onclick="handleDelete('@item.ID')">
                                                <i class="bx bx-trash me-2 delete"></i> Delete
                                            </a>
                                        </div>
                                    </div>
                                </td>
                            </tr>
                            index++;
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="8" class="text-center">No Data Found</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

<script type="text/javascript">
    $(document).ready(function () {
        $('#dataTable').dataTable();
    });

    function handleDelete(id) {
        if (confirm("Are you sure you want to delete this site?")) {
            window.location.href = '@Url.Action("Delete", "SiteSetup")/' + id;
        }
    }
</script>
