@page "{id:int}"
@model AgentWebApp.Pages.Products.DetailsModel

@{
    ViewData["Title"] = "Product Details";
}

<div class="card">
    <div class="card-header d-flex justify-content-between align-items-center">
        <h4 class="card-title mb-0">Product Details</h4>
        <div>
            <a asp-page="./Edit" asp-route-id="@Model.Product?.product_id" class="btn btn-primary">
                <i class="ri-pencil-line me-1"></i> Edit
            </a>
            <a asp-page="./Index" class="btn btn-light ms-2">
                <i class="ri-arrow-left-line me-1"></i> Back to List
            </a>
        </div>
    </div>
    <div class="card-body">
        @if (Model.Product != null)
        {
            <div class="row">
                <div class="col-md-6">
                    <div class="mb-4">
                        <h6 class="text-muted mb-2">Product Name</h6>
                        <h5>@Model.Product.Name</h5>
                    </div>
                    <div class="mb-4">
                        <h6 class="text-muted mb-2">Description</h6>
                        <div>@Model.Product.Description</div>
                    </div>
                    <div class="mb-4">
                        <h6 class="text-muted mb-2">Price</h6>
                        <div>@Model.Product.Price.ToString("C")</div>
                    </div>
                    <div class="mb-4">
                        <h6 class="text-muted mb-2">Quantity</h6>
                        <div>@Model.Product.Quantity</div>
                    </div>
                    <div class="mb-4">
                        <h6 class="text-muted mb-2">Status</h6>
                        <span class="badge @(Model.Product.Status ? "bg-success" : "bg-secondary")">
                            @(Model.Product.Status ? "Active" : "Inactive")
                        </span>
                    </div>
                </div>
            </div>
        }
        else
        {
            <div class="alert alert-warning">Product not found.</div>
        }
    </div>
</div>
